<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1>
                <%= title %>
            </h1>
            
            <!-- Add button fixed links to the add contents page  -->
            <a href="/books/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Book</a>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <th class="text-center col-2">Title</th>
                    <th class="text-center col-2">Author</th>
                    <th class="text-center col-1">Year</th>
                    <th class="col-4">Description</th>
                    <th class="text-center col-1">Price</th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count=0; count < books.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-2">
                            <%= books[count].name %>
                        </td>
                        <td class="text-center col-2">
                            <%= books[count].author %>
                        </td>
                        <td class="text-center col-1">
                            <%= books[count].published %>
                        </td>
                        <td class="col-4">
                            <%= books[count].description %>
                        </td>
                        <td class="text-center col-1">
                            <%= books[count].price %>
                        </td>
                        <td class="text-center col-1">
                            <!-- Edit button links to book detail page and the id of the book they want to edit -->
                            <a href="/books/edit/<%= books[count]._id %>" class="btn btn-primary" role="button">
                                <i class="fas fa-pencil-alt fa"></i> Edit Book</a>
                        </td>
                        <td class="text-center col-1">
                            <!-- Delete Button links the id of book to be deleted to pass through router -->
                            <a href="/books/delete/<%= books[count]._id %>" class="btn btn-danger" role="button">
                                <i class="fas fa-trash-alt fa"></i> Delete Book</a>
                        </td>
                    </tr>
                    <% } %>
            </table><br><br><br>
        </div>
    </div>
</main>